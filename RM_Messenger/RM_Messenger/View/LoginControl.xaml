<UserControl
  x:Class="RM_Messenger.View.LoginControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:gif="http://wpfanimatedgif.codeplex.com"
  xmlns:local="clr-namespace:RM_Messenger.View"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Background="White"
  mc:Ignorable="d">
  <!--  Background="#782370"  -->
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid Margin="7,0,7,7" Background="#76246E">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--<Image
      Grid.RowSpan="9"
      VerticalAlignment="Top"
      Opacity="0.4"
      Source="pack://application:,,,/RM_Messenger;component/Resources/shadow.png" />-->

    <DockPanel Margin="0">
      <Menu Background="Transparent" DockPanel.Dock="Top">
        <MenuItem Foreground="White" Header="Messenger">
          <MenuItem Foreground="Black" Header="_New">
            <MenuItem.Icon>
              <materialDesign:PackIcon Kind="OpenInNew" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem Foreground="Black" Header="_Open">
            <MenuItem.Icon>
              <materialDesign:PackIcon Kind="MenuOpen" />
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem Foreground="Black" Header="_Save">
            <MenuItem.Icon>
              <materialDesign:PackIcon Kind="ContentSave" />
            </MenuItem.Icon>
          </MenuItem>
          <Separator />
          <MenuItem Foreground="Black" Header="_Exit">
            <MenuItem.Icon>
              <materialDesign:PackIcon Kind="ExitRun" />
            </MenuItem.Icon>
          </MenuItem>
        </MenuItem>
        <MenuItem Foreground="White" Header="_Help" />
      </Menu>

    </DockPanel>

    <Image
      Grid.Row="1"
      Width="180"
      Height="120"
      Margin="0,25,0,0"
      gif:ImageBehavior.AnimatedSource="pack://application:,,,/RM_Messenger;component/Resources/YahooMessengerSleep.gif" />
    <!--  pack://application:,,,/RM_Messenger;component/Resources/YahooMessengerSleep.gif  -->
    <!--<Image
      Grid.Row="1"
      Width="90"
      Height="90"
      Margin="0,50,0,20"
      HorizontalAlignment="Center"
      Source="pack://application:,,,/RM_Messenger;component/Resources/YahooMessenger.png" />-->

    <Label
      Grid.Row="2"
      Margin="40,0"
      HorizontalAlignment="Stretch"
      Content="Yahoo! _ID:"
      Foreground="LightGray" />

    <TextBox
      Grid.Row="3"
      Width="100"
      Margin="40,0"
      HorizontalAlignment="Center"
      Background="Transparent"
      BorderThickness="0"
      FontSize="13"
      FontWeight="Bold"
      Foreground="LightGray"
      Text="{Binding MessageOnSingingIn}"
      TextAlignment="Center"
      TextWrapping="Wrap" />

    <TextBox
      x:Name="Email"
      Grid.Row="3"
      Height="20"
      Margin="40,0"
      Padding="3,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Center"
      VerticalContentAlignment="Center"
      Background="White"
      BorderBrush="White"
      FontSize="12"
      Foreground="Black"
      IsEnabled="True"
      KeyDown="Email_KeyDown"
      Text="{Binding Email, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
      TextWrapping="NoWrap" />


    <Label
      Grid.Row="4"
      Margin="40,0"
      HorizontalAlignment="Stretch"
      Content="_Password:"
      Foreground="LightGray" />

    <PasswordBox
      Name="Password"
      Grid.Row="5"
      Height="20"
      Margin="40,0"
      Padding="3,0,30,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Center"
      VerticalContentAlignment="Center"
      Background="White"
      BorderBrush="White"
      FontSize="12"
      Foreground="Black"
      KeyDown="Password_KeyDown"
      PasswordChanged="Password_PasswordChanged" />

    <StackPanel
      Grid.Row="6"
      Margin="40,15,40,20"
      HorizontalAlignment="Stretch">
      <CheckBox
        x:Name="RememberMyIDPassword"
        Background="White"
        Content="_Remember my ID password"
        FontSize="11"
        Foreground="LightGray"
        IsChecked="{Binding RememberMyIDPassword}" />
      <CheckBox
        Name="SignInAutomatically"
        Background="White"
        Content="Sign in _automatically"
        FontSize="11"
        Foreground="LightGray"
        IsChecked="{Binding SignInAutomatically}" />
      <CheckBox
        Name="SignInAsInvisible"
        Background="White"
        Content="Sign in as _invisible to everyone"
        FontSize="11"
        Foreground="LightGray"
        IsChecked="{Binding SignInAsInvisible}" />
    </StackPanel>

    <Button
      x:Name="SignInButton"
      Grid.Row="7"
      Width="80"
      Height="23"
      Margin="0,5,0,0"
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      BorderBrush="White"
      BorderThickness="0.5"
      Command="{Binding LoginCommand}"
      Content="Sign in"
      FontSize="10"
      Foreground="White"
      Style="{StaticResource MaterialDesignRaisedAccentButton}">
      <!--<Button.Background>-->
      <!--  Background="#53244E"  -->
      <Button.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          <GradientStop Offset="0" Color="#7B4171" />
          <GradientStop Offset="0.445" Color="#693060" />
          <GradientStop Offset="0.53" Color="#481041" />
        </LinearGradientBrush>
      </Button.Background>
    </Button>

    <Label
      Grid.Row="8"
      Margin="30,15,40,0"
      HorizontalAlignment="Stretch"
      Content="_Language:"
      FontSize="11"
      Foreground="LightGray" />

    <ComboBox
      Grid.Row="9"
      Margin="40,0"
      HorizontalAlignment="Stretch"
      IsReadOnly="True"
      Text="Please Select">
      <ComboBoxItem Name="create" IsSelected="True">English (U.S.)</ComboBoxItem>
    </ComboBox>

    <StackPanel
      Grid.Row="10"
      Margin="0,160,0,10"
      HorizontalAlignment="Center"
      VerticalAlignment="Center">
      <Button
        x:Name="Register"
        Height="21"
        HorizontalAlignment="Left"
        VerticalAlignment="Bottom"
        HorizontalContentAlignment="Left"
        VerticalContentAlignment="Bottom"
        Background="Transparent"
        BorderThickness="0"
        Click="Click"
        Command="{Binding CreateNewAccountCommand}"
        Content="Get a new Yahoo! ID..."
        FontSize="11"
        Foreground="#5C7FAF"
        Style="{StaticResource MaterialDesignRaisedAccentButton}" />
      <Button
        x:Name="ForgotPassword"
        Height="23"
        HorizontalAlignment="Left"
        VerticalAlignment="Bottom"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        Background="Transparent"
        BorderThickness="0"
        Click="Click"
        Command="{Binding ForgotPasswordCommand}"
        Content="Forgot your password?"
        FontSize="11"
        Foreground="#5C7FAF"
        Style="{StaticResource MaterialDesignRaisedAccentButton}" />

    </StackPanel>
  </Grid>
</UserControl>

